{
  "compilerOptions": {
    "paths": {
      "*": [
        "types/*"
      ]
    },
    "module": "commonjs",
    "target": "es2018",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "declaration": true,
    "strictNullChecks": false,
    "noUnusedLocals": false,
    "pretty": true,
    "outDir": "./build",
    "baseUrl": "./app"
  }
}
